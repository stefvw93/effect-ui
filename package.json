{
	"name": "effect-ui",
	"engines": {
		"node": ">=24.7.0",
		"pnpm": ">=10.28.0"
	},
	"version": "0.0.0",
	"description": "A reactive DOM rendering library built on Effect that enables declarative UI with streams and automatic updates.",
	"license": "ISC",
	"author": "Stef van Wijchen",
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/api.d.ts",
			"import": "./dist/api.js"
		},
		"./jsx-runtime": {
			"types": "./dist/jsx-runtime/index.d.ts",
			"import": "./dist/jsx-runtime/index.js"
		}
	},
	"scripts": {
		"build": "tsdown",
		"dev": "vite playground --config vite.config.ts",
		"lint": "biome check",
		"lint.fix": "biome check --write",
		"test": "node --import tsx --test src/**/*.test.{ts,tsx}",
		"test.watch": "node --import tsx --test --watch src/**/*.test.{ts,tsx}",
		"typecheck": "tsc"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/jsdom": "^27.0.0",
		"@types/node": "^24.10.7",
		"@vitejs/plugin-react": "^5.1.2",
		"jsdom": "^27.4.0",
		"semantic-release": "^25.0.2",
		"tsdown": "^0.19.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"csstype": "^3.2.3",
		"effect": "^3.19.14"
	}
}
